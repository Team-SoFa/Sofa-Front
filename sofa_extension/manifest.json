{
  "manifest_version": 3,
  "name": "SoFa Extension",
  "version": "1.0",
  "description": "A simple Chrome extension for testing.",
  "permissions": ["tabs", "identity", "activeTab", "storage", "scripting", "sidePanel"],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidePanel.html",
    "default_title": "SoFa Extension"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/logo16.png",
      "48": "assets/logo48.png",
      "128": "assets/logo128.png"
    }
  },
  "host_permissions": [
    "https://your-oauth-provider.com/*",
    "https://api.linkiving.com/*",
    "https://linkiving.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "dist/bundle.js",
        "services/*",
        "redux/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
