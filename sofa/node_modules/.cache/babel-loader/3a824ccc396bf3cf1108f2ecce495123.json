{"ast":null,"code":"import{useEffect,useState}from\"react\";export const OutsideClick=(el,initialState)=>{const[isActive,setIsActive]=useState(initialState);useEffect(()=>{const pageClickEvent=e=>{if(el.current!==null&&!el.current.contains(e.target)){setIsActive(false);// 외부를 클릭하면 닫힘\n}};if(isActive){window.addEventListener(\"click\",pageClickEvent);}return()=>{window.removeEventListener(\"click\",pageClickEvent);};},[isActive,el]);return[isActive,setIsActive];};","map":{"version":3,"names":["useEffect","useState","OutsideClick","el","initialState","isActive","setIsActive","pageClickEvent","e","current","contains","target","window","addEventListener","removeEventListener"],"sources":["/Users/mingmaengmung/Documents/GitHub/Sofa-Front/sofa/src/components/OutsideClick.js"],"sourcesContent":["import { useEffect, useState } from \"react\";\n\nexport const OutsideClick = (el, initialState) => {\n  const [isActive, setIsActive] = useState(initialState);\n\n  useEffect(() => {\n    const pageClickEvent = (e) => {\n      if (el.current !== null && !el.current.contains(e.target)) {\n        setIsActive(false); // 외부를 클릭하면 닫힘\n      }\n    };\n\n    if (isActive) {\n      window.addEventListener(\"click\", pageClickEvent);\n    }\n\n    return () => {\n      window.removeEventListener(\"click\", pageClickEvent);\n    };\n  }, [isActive, el]);\n\n  return [isActive, setIsActive];\n};\n"],"mappings":"AAAA,OAASA,SAAS,CAAEC,QAAQ,KAAQ,OAAO,CAE3C,MAAO,MAAM,CAAAC,YAAY,CAAGA,CAACC,EAAE,CAAEC,YAAY,GAAK,CAChD,KAAM,CAACC,QAAQ,CAAEC,WAAW,CAAC,CAAGL,QAAQ,CAACG,YAAY,CAAC,CAEtDJ,SAAS,CAAC,IAAM,CACd,KAAM,CAAAO,cAAc,CAAIC,CAAC,EAAK,CAC5B,GAAIL,EAAE,CAACM,OAAO,GAAK,IAAI,EAAI,CAACN,EAAE,CAACM,OAAO,CAACC,QAAQ,CAACF,CAAC,CAACG,MAAM,CAAC,CAAE,CACzDL,WAAW,CAAC,KAAK,CAAC,CAAE;AACtB,CACF,CAAC,CAED,GAAID,QAAQ,CAAE,CACZO,MAAM,CAACC,gBAAgB,CAAC,OAAO,CAAEN,cAAc,CAAC,CAClD,CAEA,MAAO,IAAM,CACXK,MAAM,CAACE,mBAAmB,CAAC,OAAO,CAAEP,cAAc,CAAC,CACrD,CAAC,CACH,CAAC,CAAE,CAACF,QAAQ,CAAEF,EAAE,CAAC,CAAC,CAElB,MAAO,C